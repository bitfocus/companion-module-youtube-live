{
	"extends": "@companion-module/tools/tsconfig/node18/recommended",
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**", "src/**/*spec.ts", "src/**/*test.ts", "src/**/__tests__/**", "src/**/__mocks__/**"],
	"compilerOptions": {
		"outDir": "./dist",
		"paths": {
			"*": ["./node_modules/*"]
		},
		"module": "es2022",

		// This is needed to perform ECMA imports of 'open' and 'server-destroy'.
		"esModuleInterop": true,

		// The options below all preexisted extending the recommended config and are
		// varyingly dodgy and potentially removable as explained.

		// This is *probably* vestigial if tsconfig docs are correct.
		"baseUrl": "./",

		// Module code currently uses certain inadequately-typed objects as dicts
		// so currently *requires* this be false.
		"noImplicitAny": false,

		// The recommended setting is ["node"].  This might be necessary to avoid
		// explicitly importing `jest` types, as the module is written at time this
		// comment was added.  Investigation needed!
		"types": ["node", "jest"]
	}
}
