{
	"name": "youtube-live",
	"version": "2.6.0-dev",
	"type": "module",
	"main": "dist/index.js",
	"license": "MIT",
	"scripts": {
		"dev": "yarn build:watch",
		"check-types": "tsc -p tsconfig.json --noEmit  --noUnusedLocals false",
		"build": "rimraf dist && yarn build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "yarn lint:raw .",
		"test": "vitest --run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-youtube-live.git"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write"
		],
		"*.{js,mjs,ts}": [
			"yarn lint --fix"
		]
	},
	"engines": {
		"node": "^18.12"
	},
	"dependencies": {
		"@companion-module/base": "~1.13.0",
		"@googleapis/youtube": "^30.3.0",
		"@types/node": "^22.15.18",
		"@types/server-destroy": "^1.0.0",
		"open": "^7.0.4",
		"server-destroy": "^1.0.1"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.6.1",
		"@eslint/js": "^9.39.2",
		"eslint": "~9.36.0",
		"husky": "^9.1.7",
		"leaked-handles": "^5.2.0",
		"lint-staged": "^13.2.0",
		"prettier": "^3.8.1",
		"rimraf": "^4.4.1",
		"typescript": "~5.9.3",
		"typescript-eslint": "~8.44.1",
		"vitest": "^4.0.18"
	},
	"resolutions": {
		"eslint/inquirer": "~7.2.0"
	},
	"packageManager": "yarn@4.12.0"
}
